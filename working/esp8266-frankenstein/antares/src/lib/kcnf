	bool "_lseek"

	config LIB_NLIBSTUBS_GETPID
	bool "_getpid"
	
	config LIB_NLIBSTUBS_SBRK
	bool "_sbrk"

	config LIB_NLIBSTUBS_STAT
	bool "_stat"
	
